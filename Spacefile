# Spacefile Docs: https://deta.space/docs/en/build/reference/spacefile
v: 0
micros:
  - name: bettingsystem
    src: .
    engine: python3.9
    primary: true
    run: gunicorn mymainserver.wsgi:application
    presets:
      env:
        - name: SECRET_KEY
          description: Django secret key
          default: "change-this-to-a-secure-random-string"
        - name: DEBUG
          description: Debug mode
          default: "False"
        - name: DATABASE_URL
          description: Aiven PostgreSQL connection string
          default: ""
    dev: python manage.py runserver
